<div class="boring-science-entry">
  <div class="boring-science-metadata">
    <% if article.author %>
      <div class="boring-science-author">
        <%= article.author.name %>
      </div>
    <% end %>
    <div class="boring-science-date">
      <%= boring_science_article_date(article) %>
    </div>
  </div>
  <%= link_to article_path(article) do %>
    <div>
      <h2>
        <%= article.title %>
      </h2>
      <% if article.summary.present? %>
        <span class="boring-science-summary">
          <%= article.summary %>
        </span>
      <% end %>
    </div>
  <% end %>
</div>
