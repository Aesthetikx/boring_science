<% if boring_science_user %>
  <div class="boring-science-actions">
    <%= link_to 'New Article', new_article_path %>
  </div>
<% end %>

<% @articles.each do |article| %>
  <%= link_to article_path(article) do %>
    <h3>
      <% unless article.published? %>
        (Unpublished)
      <% end %>
      <%= article.title %>
    </h3>
  <% end %>
<% end %>
