<%= form_for article do |f| %>
  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>

  <div class='field'>
    <%= f.label :publication_date, 'Publication Date' %>
    <%= f.date_field :publication_date %>
  </div>

  <div class='field'>
    <%= f.label :summary %>
    <%= f.text_area :summary, rows: 2 %>
  </div>

  <div class='field'>
    <%= f.label :body %>
    <%= f.text_area :body, required: true, rows: 16 %>
  </div>

  <%= f.submit %>
<% end %>
